{
  "name": "re621-legacy",
  "displayName": "re621 - e621 Reimagined",
  "namespace": "re621.app",
  "version": "1.5.0",
  "description": "Subscription manager, mass downloader, thumbnail enhancer, and more for e621",
  "author": "bitWolfy",
  "contributors": [
    "bitWolfy <@bitWolfy#7932>",
    "Earlopain <@Earlopain#9703>"
  ],
  "main": "./build/script.user.js",
  "scripts": {
    "build:prod": "bun run compile:prod && bun run compose:prod && bun run clean",
    "build:dev": "bun run compile:dev && bun run compose:dev && bun run clean",
    "compile:prod": "concurrently \"bun run compile-typescript:prod\" \"bun run compile-sass:prod\"",
    "compile:dev": "concurrently \"bun run compile-typescript:dev\" \"bun run compile-sass:dev\"",
    "compile-typescript:prod": "bun run eslint && bun run typescript && bun run browserify && bun run minify && bun run template",
    "compile-typescript:dev": "bun run eslint && bun run typescript && bun run browserify && bun run template",
    "eslint": "eslint ./**/*.ts",
    "typescript": "tsc",
    "browserify": "browserify ./build/tsc-temp/js/main.js -o ./build/script.js",
    "minify": "terser ./build/script.js --compress -o ./build/script.js",
    "template": "bun run ./bin/common.js",
    "compile-sass:prod": "bun run sass:prod && bun run autoprefixer",
    "compile-sass:dev": "bun run sass:dev && bun run autoprefixer",
    "sass:prod": "sass ./src/scss/style.scss ./build/style.css --no-source-map --style expanded",
    "sass:dev": "sass ./src/scss/style.scss ./build/style.css --no-source-map --style expanded",
    "autoprefixer": "postcss ./build/style.css --no-map --use autoprefixer -r",
    "compose:prod": "concurrently \"bun run compose-userscript:prod\" \"bun run compose-extension:prod\"",
    "compose:dev": "concurrently \"bun run compose-userscript:dev\" \"bun run compose-extension:dev\"",
    "compose-userscript:prod": "bun run userscript:prod",
    "compose-userscript:dev": "bun run userscript:dev",
    "userscript:prod": "bun run ./bin/userscript.js prod",
    "userscript:dev": "bun run ./bin/userscript.js",
    "injector:chrome": "bun run ./bin/userscript.js injector chrome",
    "injector:firefox": "bun run ./bin/userscript.js injector firefox",
    "compose-extension:prod": "bun run extension:prod && bun run extension-archive",
    "compose-extension:dev": "bun run extension:dev",
    "extension:prod": "bun run ./bin/extension.js prod",
    "extension:dev": "bun run ./bin/extension.js",
    "extension-pack": "bun run ./bin/extension-pack.js",
    "extension-archive": "bun run ./bin/extension-archive.js",
    "clean": "bun run ./bin/cleanup.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/re621/re621.Legacy.git"
  },
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/re621/re621.Legacy/issues"
  },
  "homepage": "https://e621.net/forum_topics/25872",
  "github": "https://github.com/re621/re621.Legacy",
  "dependencies": {
    "jquery": "^3.6.0",
    "jquery-ui": "^1.13.2"
  },
  "devDependencies": {
    "@actions/core": "^1.9.1",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/jquery": "^3.5.14",
    "@types/jqueryui": "^1.12.16",
    "@typescript-eslint/parser": "^8.26.1",
    "archiver": "^5.3.0",
    "autoprefixer": "^10.4.0",
    "browserify": "^17.0.0",
    "concurrently": "^8.2.2",
    "crx": "^5.0.1",
    "eslint": "^9.22.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^9.0.2",
    "sass": "^1.43.4",
    "terser": "^5.14.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
