{
    "manifest_version": 2,
    "name": "%DISPLAYNAME%",
    "short_name": "%NAME%",
    "version": "%VERSION%",
    "description": "%DESCRIPTION%",
    "author": "%AUTHOR%",

    "icons": {},
    "icons-lib": [
        {
            "size": "32",
            "url": "https://cdn.jsdelivr.net/gh/re621/re621.github.io@master/images/icons/icon32.png",
            "path": "./build/cache/icon32.png"
        },
        {
            "size": "64",
            "url": "https://cdn.jsdelivr.net/gh/re621/re621.github.io@master/images/icons/icon64.png",
            "path": "./build/cache/icon64.png"
        },
        {
            "size": "129",
            "url": "https://cdn.jsdelivr.net/gh/re621/re621.github.io@master/images/icons/icon128.png",
            "path": "./build/cache/icon128.png"
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [
                "https://e621.net/*",
                "https://e926.net/*"
            ],
            "css": [],
            "js": [],
            "js-lib": [
                [
                    "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js",
                    "./build/cache/jquery.min.js"
                ],
                [
                    "https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js",
                    "./build/cache/jquery-ui.min.js"
                ],
                [
                    "https://cdnjs.cloudflare.com/ajax/libs/jszip/3.5.0/jszip.min.js",
                    "./build/cache/jszip.min.js"
                ],
                [
                    "https://cdn.jsdelivr.net/npm/jquery.hotkeys@0.1.0/jquery.hotkeys.min.js",
                    "./build/cache/jquery.hotkeys.min.js"
                ],
                [
                    "https://cdn.jsdelivr.net/gh/re621/re621-lib@c8a82094eefeefdd4389538f87022bacdcf5c459/lazysizes/lazysizes.min.js",
                    "./build/cache/lazysizes.min.js"
                ],
                [
                    "https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.2.0/plugins/unload/ls.unload.min.js",
                    "./build/cache/ls.unload.min.js"
                ]
            ]
        }
    ],

    "permissions": [
        "storage",
        "tabs",
        "https://api.github.com/*",
        "https://static1.e621.net/*"
    ],

    "resources": {
        "re621_css": "style.min.css"
    },

    "web_accessible_resources": [
        "style.min.css",
        "injector.js"
    ]
}
